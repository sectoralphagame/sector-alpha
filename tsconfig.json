{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "strictNullChecks": true,
    "paths": {
      "@assets/*": ["assets/*"],
      "@core/*": ["core/*"],
      "@devtools/*": ["devtools/*"],
      "@kit/*": ["kit/*"],
      "@ui/*": ["ui/*"],
      "@ogl-engine/*": ["ogl-engine/*"]
    }
  },
  "exclude": ["**/*.test.*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
